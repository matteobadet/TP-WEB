{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "sourceMap": true, // Important pour utiliser le debugger
    "outDir": "./public/js/", //Votre dossier ou sortira le JS
    "rootDir": "./js" //Votre dossier avec vos fichier TS
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}